{
  "name": "StudyPlanner Backend",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "app",
  "workspaceFolder": "/app",
  "shutdownAction": "none",
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance"
  ],
  "settings": {
    "python.defaultInterpreterPath": "/usr/local/bin/python",
    "python.linting.enabled": true
  },
  "forwardPorts": [5000],
  "portsAttributes": {
    "5000": {
      "label": "Flask Backend",
      "onAutoForward": "notify"
    }
  }
}